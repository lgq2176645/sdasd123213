/* pages/join/join.wxss */
.header{
  display:flex;
  height:80rpx;
  margin-top:20rpx;
  background-color:white;
  font-size:30rpx;
}
.header-left{
  flex:4;
}
.header-right{
  flex:8;
}
.header-left-image{
  width:50rpx;
  height:50rpx;
  margin-left:20px;
}
.header-right-span1{
  color:red;
}
.header-right-span2{
  color:blue;
}
.header-buttom{
  height:10rpx;
  background:#ccc;
}
.icon{
  position: relative;
	overflow: hidden;
	width: 25%;
	float: left;
	height:0;
	padding-bottom: 25%;
  font-size:28rpx;
}
.icon-header-img{
  position: absolute;
	top:0;
	left:30rpx;
	right:0;
	bottom:10rpx;
	box-sizing: border-box;
	padding: 5rpx;
  width:130rpx;
  height:130rpx;
}
.icon-header-text{
  position: absolute;
  top:125rpx;
  left:35rpx;
  right:0;
  bottom:0;
}

.swiper-tab{
  width:100%;
  border-bottom: 2rpx solid #ccc;
  text-align:center;
  height:88rpx;
  line-height:88rpx;
  display:flex;
  flex-flow:  row;
  justify-content: space-between;
}
.swiper-tab-item{
  width: 30%;
  color: #434343;
}
.active{
  color:#F65959;
  border-bottom: 4rpx solid #F65959;
}
.tab-header{
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 0;
  padding-bottom:18%;
  font-size:28rpx;
  margin-top:10rpx;
}
.tab-header-image1{
  width:100rpx;
  height:100rpx;
  position: absolute;
  top:10rpx;
  left:10rpx;
  bottom:0;
  right:0;
  box-sizing:border-box;
}
.tab-header-text1{
  font-size:30rpx;
  font-weight:bold;
  position:absolute;
  top:10rpx;
  right:0;
  bottom:0;
  left:120rpx;
  color:red;
}
.tab-header-text2{
  position:absolute;
  top:80rpx;
  right:0;
  bottom:0;
  left:120rpx;
  width:80rpx;
  height:40rpx;
  text-align:center;
  border-radius: 5rpx;
  background:yellow;
  color:red;
}
.tab-header-text3{
  position:absolute;
  top:80rpx;
  right:0;
  bottom:0;
  left:230rpx;
  width:150rpx;
  height:40rpx;
  text-align:center;
  border-radius: 5rpx;
  background:ivory;
  color:red;
}
.tab-header-button1{
  width:300rpx;
  height:130rpx;
  position:abolute;
  top:0;
  right:0;
  bottom:0;
  left:200rpx;
}
.tab-header-image2{
  width:80rpx;
  height:80rpx;
  margin:20rpx 5rpx 0 0;
}