/* pages/my/my.wxss */
.header{
  background:#ff2d2d;
  text-align:center;
}
.header-nav-image{
  width:150rpx;
  height:150rpx;
  border-radius:50%;
  margin-top:20rpx;
}
.header-nav-text{
  color:white;
  padding-bottom:20rpx;
  font-weight:bold;
}
.footer{
  width:100%;
  background:#eee;
  display:flex;
  border-bottom:1rpx solid #eee;
}
.footer-left{
  flex:1;
}
.footer-zhon{
  flex:10;
  background:white;
  margin-top:20rpx;
  border-radius:10rpx 10rpx 0 0;
  display:flex;
  font-size:28rpx;
}
.footer-right{
  flex:1;
}
.footer-zhon-left-image{
  width:50rpx;
  height:50rpx;
  margin-top:20rpx;
  overflow: hidden;
}
.footer-zhon-zhon{
  flex:4;
  margin-top:25rpx;
}
.footer-zhon-left{
  flex:1;
}
.yuan{
  width:60rpx;
  height:65rpx;
  border:1rpx solid yellow;
  border-radius:50%;
  text-align: center;
  
}
.footer-zhon-right{
  flex:5;
  margin-top:25rpx;
  text-align: right;
  margin-right:20rpx;
}
.shoopey{
  display:flex;
  background:#eee;
}
.shoopey-left{
  flex:1;
}
.shoopey-zhon{
  flex:10;
  background:white;
}
.shoopey-right{
  flex:1;
}
.icon{
  font-size:28rpx;
}
.icon-header{
  position: relative;
  overflow: hidden;
  width: 20%;
  padding-bottom:50%;
  font-size:28rpx;
  margin-top:10rpx;
  border:1rpx solid black;
}
.coar{
  margin-top:20rpx;
}
.icon1{
  position: relative;
	overflow: hidden;
	width: 20%;
	float: left;
	height:0;
	padding-bottom: 20%;
  font-size:28rpx;
  border-radius: 0 0 20rpx 20rpx;
}
.icon-header-img{
  position: absolute;
	top:0;
	left:30rpx;
	right:0;
	bottom:10rpx;
	box-sizing: border-box;
	padding: 5rpx;
  width:50rpx;
  height:50rpx;
}
.icon-header-text{
  position: absolute;
  top:55rpx;
  left:10rpx;
  right:0;
  bottom:0;
  color:red;
}

.active{
  display:flex;
  background:#eee;
}
.active-left{
  flex:1;
}
.active-zhon{
  flex:10;
  background:white;
  border-radius:20rpx;
}
.active-right{
  flex:1;
}
.hidden{
  width:100%;
  height:20rpx;
  background:#eee;
}
.active-zhon-header{
  display:flex;
}
.active-zhon-header-left{
  flex:4
}
.active-zhon-header-right{
  flex:4;
}